# Model Price Backend Configuration
# Copy this file to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_VERSION=0.2.0
RELOAD=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=["http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External API URLs
LITELLM_URL=https://raw.githubusercontent.com/BerriAI/litellm/main/model_prices_and_context_window.json
OPENAI_PRICING_URL=https://platform.openai.com/docs/pricing
GEMINI_PRICING_URL=https://ai.google.dev/pricing
BEDROCK_URL=https://pricing.us-east-1.amazonaws.com/offers/v1.0/aws/AmazonBedrock/current/us-east-1/index.json
BEDROCK_FM_URL=https://pricing.us-east-1.amazonaws.com/offers/v1.0/aws/AmazonBedrockFoundationModels/current/us-east-1/index.json
OPENROUTER_URL=https://openrouter.ai/api/v1/models

# HTTP Timeouts (seconds unless noted)
HTTP_TIMEOUT=60.0
METADATA_TIMEOUT=30.0
SCRAPER_SUBPROCESS_TIMEOUT=300
SCRAPER_PAGE_LOAD_TIMEOUT=60000   # milliseconds
SCRAPER_WAIT_TIMEOUT=2000         # milliseconds
GEMINI_SCRAPER_WAIT_TIMEOUT=3000  # milliseconds
